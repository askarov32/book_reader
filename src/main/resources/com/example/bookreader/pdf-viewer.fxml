<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.media.MediaView?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.bookreader.PDFViewerController" stylesheets="@styles.css">
    <top>
        <HBox alignment="CENTER" spacing="10" styleClass="hbox">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <MediaView fx:id="mediaView" fitHeight="40" fitWidth="40" styleClass="media-view"/>
            <Button onAction="#showPreviousPage" text="Previous" styleClass="button">
                <font>
                    <Font name="Courier New" size="14.0" />
                </font>
            </Button>
            <Button onAction="#showNextPage" text="Next" styleClass="button">
                <font>
                    <Font name="Courier New" size="14.0" />
                </font>
            </Button>
            <Button onAction="#zoomIn" text="+" textOverrun="CLIP" styleClass="button" />
            <Button onAction="#zoomOut" text="-" textOverrun="CLIP" styleClass="button" />
            <TextField fx:id="searchField" promptText="Search..." styleClass="text-field" />
            <Button onAction="#searchText" text="Search" textOverrun="WORD_ELLIPSIS" styleClass="button">
                <font>
                    <Font name="Courier New" size="14.0" />
                </font>
            </Button>
        </HBox>
    </top>
    <center>
        <ScrollPane fx:id="scrollPane" fitToWidth="true" fitToHeight="true" styleClass="scroll-pane">
            <BorderPane fx:id="pdfViewerPane" prefHeight="1000" prefWidth="800" styleClass="border-pane"/>
        </ScrollPane>
    </center>
</BorderPane>
